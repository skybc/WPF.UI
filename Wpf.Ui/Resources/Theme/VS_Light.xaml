<!--
    Visual Studio Blue Theme Color Scheme
    Based on VS_Light.xaml structure with Visual Studio Blue design aesthetics
    
    Design Philosophy:
    - Deep blue and light blue as primary colors
    - White and light gray for backgrounds
    - Dark gray/black for text to ensure high contrast
    - Bright blue for highlights and accents
    - Consistent layering and hierarchy through color depth
-->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  =============================================  -->
    <!--  Application Base Colors  -->
    <!--  =============================================  -->

    <!--  Primary application background - clean white with subtle blue tint  -->
    <Color x:Key="ApplicationBackgroundColor">#FFFCFCFD</Color>
    <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="{StaticResource ApplicationBackgroundColor}" />

    <!--  Keyboard focus - bright blue for accessibility  -->
    <Color x:Key="KeyboardFocusBorderColor">#FF0078D4</Color>
    <SolidColorBrush x:Key="KeyboardFocusBorderColorBrush" Color="{StaticResource KeyboardFocusBorderColor}" />

    <!--  =============================================  -->
    <!--  Text Colors - High contrast for readability  -->
    <!--  =============================================  -->

    <Color x:Key="TextFillColorPrimary">#FF1F1F1F</Color>
    <Color x:Key="TextFillColorSecondary">#FF666666</Color>
    <Color x:Key="TextFillColorTertiary">#FF888888</Color>
    <Color x:Key="TextFillColorDisabled">#FFAAAAAA</Color>
    <Color x:Key="TextPlaceholderColor">#FF999999</Color>
    <Color x:Key="TextFillColorInverse">#FFFFFFFF</Color>

    <!--  Accent text colors  -->
    <Color x:Key="AccentTextFillColorDisabled">#FFAAAAAA</Color>
    <Color x:Key="TextOnAccentFillColorSelectedText">#FFFFFFFF</Color>
    <Color x:Key="TextOnAccentFillColorPrimary">#FFFFFFFF</Color>
    <Color x:Key="TextOnAccentFillColorSecondary">#FFE0E0E0</Color>
    <Color x:Key="TextOnAccentFillColorDisabled">#FFCCCCCC</Color>

    <!--  =============================================  -->
    <!--  Control Fill Colors - Blue-based hierarchy  -->
    <!--  =============================================  -->

    <!--  Default control backgrounds - light blue tints  -->
    <Color x:Key="ControlFillColorDefault">#FFF8F9FA</Color>
    <Color x:Key="ControlFillColorSecondary">#FFF1F3F5</Color>
    <Color x:Key="ControlFillColorTertiary">#FFEBECEE</Color>
    <Color x:Key="ControlFillColorDisabled">#FFF5F5F5</Color>
    <Color x:Key="ControlFillColorTransparent">#00FFFFFF</Color>
    <Color x:Key="ControlFillColorInputActive">#FFFFFFFF</Color>

    <!--  Strong fill colors for emphasis  -->
    <Color x:Key="ControlStrongFillColorDefault">#FF4A4A4A</Color>
    <Color x:Key="ControlStrongFillColorDisabled">#FFCCCCCC</Color>

    <!--  Solid fill colors  -->
    <Color x:Key="ControlSolidFillColorDefault">#FFFFFFFF</Color>

    <!--  =============================================  -->
    <!--  Subtle Fill Colors - Minimal visual impact  -->
    <!--  =============================================  -->

    <Color x:Key="SubtleFillColorTransparent">#00FFFFFF</Color>
    <Color x:Key="SubtleFillColorSecondary">#FFE8F4FD</Color>
    <Color x:Key="SubtleFillColorTertiary">#FFD1E7FB</Color>
    <Color x:Key="SubtleFillColorDisabled">#00FFFFFF</Color>

    <!--  =============================================  -->
    <!--  Alternative Fill Colors  -->
    <!--  =============================================  -->

    <Color x:Key="ControlAltFillColorTransparent">#00FFFFFF</Color>
    <Color x:Key="ControlAltFillColorSecondary">#FFE8F4FD</Color>
    <Color x:Key="ControlAltFillColorTertiary">#FFD1E7FB</Color>
    <Color x:Key="ControlAltFillColorQuarternary">#FFBDDBF7</Color>
