    <!--  =============================================  -->
    <!--  On Image Fill Colors  -->
    <!--  =============================================  -->

    <Color x:Key="ControlOnImageFillColorDefault">#FFF0F6FF</Color>
    <Color x:Key="ControlOnImageFillColorSecondary">#FFE6F2FF</Color>
    <Color x:Key="ControlOnImageFillColorTertiary">#FFDEEFFF</Color>
    <Color x:Key="ControlOnImageFillColorDisabled">#00FFFFFF</Color>

    <!--  =============================================  -->
    <!--  Accent Colors - Visual Studio Blue System  -->
    <!--  =============================================  -->

    <Color x:Key="AccentFillColorDisabled">#FFD0D0D0</Color>

    <!--  =============================================  -->
    <!--  Stroke Colors - Borders and outlines  -->
    <!--  =============================================  -->

    <Color x:Key="ControlStrokeColorDefault">#FFE1E1E1</Color>
    <Color x:Key="ControlStrokeColorSecondary">#FFD0D0D0</Color>
    <Color x:Key="ControlStrokeColorTertiary">#FF999999</Color>
