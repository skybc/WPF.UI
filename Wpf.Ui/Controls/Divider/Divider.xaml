<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Wpf.Ui.Controls">

    <Style TargetType="{x:Type controls:Divider}">
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}" />
        <Setter Property="LineStroke" Value="{DynamicResource DividerStrokeColorDefaultBrush}" />
        <Setter Property="LineThickness" Value="1" />
        <Setter Property="Spacing" Value="12" />
        <Setter Property="FontSize" Value="{DynamicResource ControlContentThemeFontSize}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,8,0,8" />
        <Setter Property="Focusable" Value="False" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:Divider}">
                    <Grid>
                        <!-- Horizontal Divider -->
                        <Grid x:Name="HorizontalDivider" Visibility="Visible">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="LeftColumn" Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition x:Name="RightColumn" Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Left Line -->
                            <Border
                                x:Name="LeftLine"
                                Grid.Column="0"
                                Height="{TemplateBinding LineThickness}"
                                VerticalAlignment="Center"
                                Background="{TemplateBinding LineStroke}" />

                            <!-- Content -->
                            <ContentPresenter
                                x:Name="ContentPresenter"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                TextElement.Foreground="{TemplateBinding Foreground}" />

                            <!-- Right Line -->
                            <Border
                                x:Name="RightLine"
                                Grid.Column="2"
                                Height="{TemplateBinding LineThickness}"
                                VerticalAlignment="Center"
                                Background="{TemplateBinding LineStroke}" />
                        </Grid>

                        <!-- Vertical Divider -->
                        <Grid x:Name="VerticalDivider" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Top Line -->
                            <Border
                                x:Name="TopLine"
                                Grid.Row="0"
                                Width="{TemplateBinding LineThickness}"
                                HorizontalAlignment="Center"
                                Background="{TemplateBinding LineStroke}" />

                            <!-- Content (Vertical) -->
                            <ContentPresenter
                                x:Name="VerticalContentPresenter"
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                TextElement.Foreground="{TemplateBinding Foreground}">
                                <ContentPresenter.LayoutTransform>
                                    <RotateTransform Angle="90" />
                                </ContentPresenter.LayoutTransform>
                            </ContentPresenter>

                            <!-- Bottom Line -->
                            <Border
                                x:Name="BottomLine"
                                Grid.Row="2"
                                Width="{TemplateBinding LineThickness}"
                                HorizontalAlignment="Center"
                                Background="{TemplateBinding LineStroke}" />
                        </Grid>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Vertical Orientation -->
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter TargetName="HorizontalDivider" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="VerticalDivider" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <!-- Content Alignment: Left -->
                        <Trigger Property="ContentAlignment" Value="Left">
                            <Setter TargetName="LeftColumn" Property="Width" Value="Auto" />
                            <Setter TargetName="LeftLine" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="ContentPresenter" Property="Margin" Value="0,0,12,0" />
                        </Trigger>

                        <!-- Content Alignment: Right -->
                        <Trigger Property="ContentAlignment" Value="Right">
                            <Setter TargetName="RightColumn" Property="Width" Value="Auto" />
                            <Setter TargetName="RightLine" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="ContentPresenter" Property="Margin" Value="12,0,0,0" />
                        </Trigger>

                        <!-- Content Alignment: Center (default) -->
                        <Trigger Property="ContentAlignment" Value="Center">
                            <Setter TargetName="ContentPresenter" Property="Margin" Value="12,0,12,0" />
                            <Setter TargetName="VerticalContentPresenter" Property="Margin" Value="0,12,0,12" />
                        </Trigger>

                        <!-- Content Alignment: Stretch (acts as Center) -->
                        <Trigger Property="ContentAlignment" Value="Stretch">
                            <Setter TargetName="ContentPresenter" Property="Margin" Value="12,0,12,0" />
                            <Setter TargetName="VerticalContentPresenter" Property="Margin" Value="0,12,0,12" />
                        </Trigger>

                        <!-- Hide content when Content is null or empty -->
                        <Trigger Property="Content" Value="{x:Null}">
                            <Setter TargetName="ContentPresenter" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="VerticalContentPresenter" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="LeftColumn" Property="Width" Value="0" />
                            <Setter TargetName="RightColumn" Property="Width" Value="*" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
