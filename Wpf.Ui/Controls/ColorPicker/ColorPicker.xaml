<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Wpf.Ui.Controls"
    xmlns:converters="clr-namespace:Wpf.Ui.Converters"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!--  Color to Brush Converter  -->
    <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    <!--  Color to Hex Converter  -->
    <converters:ColorToHexConverter x:Key="ColorToHexConverter" />

    <!--  Color Picker Style  -->
    <Style TargetType="{x:Type controls:ColorPicker}">
        <Setter Property="FocusVisualStyle" Value="{DynamicResource DefaultControlFocusVisualStyle}" />
        <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ControlElevationBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,5,8,5" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="MinWidth" Value="120" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="{DynamicResource ControlContentThemeFontSize}" />
        <Setter Property="Border.CornerRadius" Value="{DynamicResource ControlCornerRadius}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ColorPicker}">
                    <Grid>
                        <Border
                            x:Name="ContentBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding Border.CornerRadius}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Current Color Display  -->
                                <Border
                                    x:Name="PART_ColorBorder"
                                    Grid.Column="0"
                                    Margin="4,0,0,0"
                                    Background="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ColorToBrushConverter}}"
                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="2"
                                    Cursor="Hand" />

                                <!--  Dropdown Toggle Button  -->
                                <ToggleButton
                                    x:Name="PART_ToggleButton"
                                    Grid.Column="1"
                                    Width="24"
                                    Height="24"
                                    Margin="4,0,0,0"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Focusable="False">
                                    <controls:SymbolIcon
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Symbol="ChevronDown24" />
                                </ToggleButton>
                            </Grid>
                        </Border>

                        <!--  Popup  -->
                        <Popup
                            x:Name="PART_Popup"
                            AllowsTransparency="True"
                            Focusable="False"
                            IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                            Placement="Bottom"
                            PlacementTarget="{Binding ElementName=ContentBorder}"
                            PopupAnimation="Slide"
                            StaysOpen="False">
                            <Border
                                MinWidth="300"
                                Margin="0,4,0,0"
                                Padding="12"
                                Background="{DynamicResource ComboBoxDropDownBackground}"
                                BorderBrush="{DynamicResource ComboBoxDropDownBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="{DynamicResource PopupCornerRadius}">
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="12"
                                        Direction="270"
                                        Opacity="0.15"
                                        ShadowDepth="4"
                                        Color="Black" />
                                </Border.Effect>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  Top Section: Color Picker + Inputs  -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="12" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Color Canvas  -->
                                        <controls:ColorCanvas
                                            Grid.Column="0"
                                            Width="200"
                                            Height="200"
                                            Hue="{Binding Hue, RelativeSource={RelativeSource TemplatedParent}}"
                                            Saturation="{Binding Saturation, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                            Value="{Binding Brightness, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" />

                                        <!--  Hue Color Bar (Vertical)  -->
                                        <Border
                                            Grid.Column="2"
                                            Width="20"
                                            Height="200"
                                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                    <GradientStop Offset="0.00" Color="#FF0000" />
                                                    <GradientStop Offset="0.17" Color="#FFFF00" />
                                                    <GradientStop Offset="0.33" Color="#00FF00" />
                                                    <GradientStop Offset="0.50" Color="#00FFFF" />
                                                    <GradientStop Offset="0.67" Color="#0000FF" />
                                                    <GradientStop Offset="0.83" Color="#FF00FF" />
                                                    <GradientStop Offset="1.00" Color="#FF0000" />
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Slider
                                                Maximum="360"
                                                Minimum="0"
                                                Orientation="Vertical"
                                                Value="{Binding Hue, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                                                <Slider.LayoutTransform>
                                                    <ScaleTransform ScaleY="-1" />
                                                </Slider.LayoutTransform>
                                                <Slider.Style>
                                                    <Style TargetType="Slider">
                                                        <Setter Property="Background" Value="Transparent" />
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Slider">
                                                                    <Grid>
                                                                        <Track x:Name="PART_Track">
                                                                            <Track.Thumb>
                                                                                <Thumb Width="24" Height="6">
                                                                                    <Thumb.Template>
                                                                                        <ControlTemplate TargetType="Thumb">
                                                                                            <Border
                                                                                                Background="White"
                                                                                                BorderBrush="Black"
                                                                                                BorderThickness="1"
                                                                                                CornerRadius="1">
                                                                                                <Border.Effect>
                                                                                                    <DropShadowEffect
                                                                                                        BlurRadius="3"
                                                                                                        Direction="0"
                                                                                                        Opacity="0.3"
                                                                                                        ShadowDepth="0"
                                                                                                        Color="Black" />
                                                                                                </Border.Effect>
                                                                                            </Border>
                                                                                        </ControlTemplate>
                                                                                    </Thumb.Template>
                                                                                </Thumb>
                                                                            </Track.Thumb>
                                                                        </Track>
                                                                    </Grid>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </Slider.Style>
                                            </Slider>
                                        </Border>

                                        <!--  Right Panel: Inputs  -->
                                        <StackPanel Grid.Column="4" Width="120">

                                            <!--  RGBA Inputs  -->
                                            <StackPanel>
                                                <!--  RGBA Inputs  -->
                                                <StackPanel>
                                                    <!--  Hex Input  -->
                                                    <Grid Margin="0,0,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            FontSize="12"
                                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                            Text="Hex" />
                                                        <TextBox
                                                            Grid.Column="1"
                                                            Height="28"
                                                            VerticalContentAlignment="Center"
                                                            FontFamily="Consolas"
                                                            FontSize="11"
                                                            MaxLength="9"
                                                            Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ColorToHexConverter}, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                                                    </Grid>

                                                    <!--  R Input  -->
                                                    <Grid Margin="0,0,0,4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            FontSize="12"
                                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                            Text="R" />
                                                        <controls:NumberBox
                                                            Grid.Column="1"
                                                            Height="28"
                                                            Maximum="255"
                                                            Minimum="0"
                                                            SpinButtonPlacementMode="Compact"
                                                            Value="{Binding Red, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </Grid>

                                                    <!--  G Input  -->
                                                    <Grid Margin="0,0,0,4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            FontSize="12"
                                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                            Text="G" />
                                                        <controls:NumberBox
                                                            Grid.Column="1"
                                                            Height="28"
                                                            Maximum="255"
                                                            Minimum="0"
                                                            SpinButtonPlacementMode="Compact"
                                                            Value="{Binding Green, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </Grid>

                                                    <!--  B Input  -->
                                                    <Grid Margin="0,0,0,4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            FontSize="12"
                                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                            Text="B" />
                                                        <controls:NumberBox
                                                            Grid.Column="1"
                                                            Height="28"
                                                            Maximum="255"
                                                            Minimum="0"
                                                            SpinButtonPlacementMode="Compact"
                                                            Value="{Binding Blue, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </Grid>

                                                    <!--  A Input  -->
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            FontSize="12"
                                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                            Text="A" />
                                                        <controls:NumberBox
                                                            Grid.Column="1"
                                                            Height="28"
                                                            Maximum="255"
                                                            Minimum="0"
                                                            SpinButtonPlacementMode="Compact"
                                                            Value="{Binding Alpha, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                    </Grid>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>

                                    <!--  Bottom Section: Preset Colors  -->
                                    <Grid Grid.Row="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="4" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--  First Row  -->
                                        <ItemsControl Grid.Row="0">
                                            <ItemsControl.ItemsSource>
                                                <Binding Path="PresetColors" RelativeSource="{RelativeSource TemplatedParent}">
                                                    <Binding.Converter>
                                                        <converters:TakeItemsConverter Count="9" />
                                                    </Binding.Converter>
                                                </Binding>
                                            </ItemsControl.ItemsSource>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid Rows="1" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button
                                                        Width="24"
                                                        Height="24"
                                                        Margin="2"
                                                        Padding="0"
                                                        Background="{Binding Converter={StaticResource ColorToBrushConverter}}"
                                                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                                        BorderThickness="1"
                                                        Tag="{Binding}">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="4">
                                                                    <Border.Style>
                                                                        <Style TargetType="Border">
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColorSecondaryBrush}" />
                                                                                    <Setter Property="BorderThickness" Value="2" />
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Border.Style>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!--  Second Row  -->
                                        <ItemsControl Grid.Row="2">
                                            <ItemsControl.ItemsSource>
                                                <Binding Path="PresetColors" RelativeSource="{RelativeSource TemplatedParent}">
                                                    <Binding.Converter>
                                                        <converters:SkipTakeItemsConverter Count="9" Skip="9" />
                                                    </Binding.Converter>
                                                </Binding>
                                            </ItemsControl.ItemsSource>
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <UniformGrid Rows="1" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button
                                                        Width="24"
                                                        Height="24"
                                                        Margin="2"
                                                        Padding="0"
                                                        Background="{Binding Converter={StaticResource ColorToBrushConverter}}"
                                                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                                        BorderThickness="1"
                                                        Tag="{Binding}">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="4">
                                                                    <Border.Style>
                                                                        <Style TargetType="Border">
                                                                            <Style.Triggers>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColorSecondaryBrush}" />
                                                                                    <Setter Property="BorderThickness" Value="2" />
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Border.Style>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ContentBorder" Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter TargetName="PART_ToggleButton" Property="IsChecked" Value="True" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
