<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Wpf.Ui.Controls">

    <!--  DataTemplate for PropertyItem  -->
    <DataTemplate DataType="{x:Type local:PropertyItem}">
        <local:PropertyItemContainer />
    </DataTemplate>

    <!--  DataTemplate for PropertyGroupItem  -->
    <DataTemplate DataType="{x:Type local:PropertyGroupItem}">
        <local:PropertyGroupContainer />
    </DataTemplate>

    <!--  Style for ToggleButton in PropertyPanel header  -->
    <Style x:Key="PropertyPanelToggleButtonStyle" TargetType="{x:Type ToggleButton}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="{TemplateBinding Content}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="#E0E0E0" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F0F0F0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  Default style for PropertyPanel  -->
    <Style TargetType="{x:Type local:PropertyPanel}">
        <Setter Property="Padding" Value="12" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel IsItemsHost="True" Orientation="Vertical" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PropertyPanel}">
                    <Border
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <DockPanel>
                            <!--  Header with search and sort buttons  -->
                            <Grid
                                Height="40"
                                Margin="0,0,0,8"
                                DockPanel.Dock="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Sort by Category ToggleButton  -->
                                <ToggleButton
                                    x:Name="SortByCategoryButton"
                                    Grid.Column="0"
                                    Width="40"
                                    Height="40"
                                    Margin="0,0,4,0"
                                    Style="{StaticResource PropertyPanelToggleButtonStyle}"
                                    ToolTip="Sort by Category">
                                    <TextBlock FontSize="18" Text="📁" />
                                </ToggleButton>

                                <!--  Sort by Name ToggleButton  -->
                                <ToggleButton
                                    x:Name="SortByNameButton"
                                    Grid.Column="1"
                                    Width="40"
                                    Height="40"
                                    Margin="0,0,12,0"
                                    Style="{StaticResource PropertyPanelToggleButtonStyle}"
                                    ToolTip="Sort by Name">
                                    <TextBlock FontSize="18" Text="🔤" />
                                </ToggleButton>

                                <!--  Search TextBox  -->
                                <TextBox
                                    Grid.Column="2"
                                    Height="32"
                                    Margin="0,0,0,0"
                                    Padding="8,6,8,6"
                                    VerticalAlignment="Center"
                                    Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SearchText, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

                            <!--  Items Presenter  -->
                            <ScrollViewer
                                Focusable="False"
                                HorizontalScrollBarVisibility="Disabled"
                                VerticalScrollBarVisibility="Auto">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
