<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Wpf.Ui.Controls"
    xmlns:system="clr-namespace:System;assembly=System.Runtime">

    <!--  Steps 外部边距  -->
    <Thickness x:Key="StepsMargin">0</Thickness>

    <!--  步骤项之间的间距  -->
    <Thickness x:Key="HorizontalStepItemMargin">8,0,8,0</Thickness>
    <Thickness x:Key="VerticalStepItemMargin">8,0,0,8</Thickness>

    <!--  横向 ItemsPanel  -->
    <ItemsPanelTemplate x:Key="HorizontalStepsPanelTemplate">
        <StackPanel
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Orientation="Horizontal" />
    </ItemsPanelTemplate>

    <!--  纵向 ItemsPanel  -->
    <ItemsPanelTemplate x:Key="VerticalStepsPanelTemplate">
        <StackPanel
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Orientation="Vertical" />
    </ItemsPanelTemplate>

    <!--  Steps 容器样式  -->
    <Style TargetType="{x:Type controls:Steps}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter Property="Margin" Value="{StaticResource StepsMargin}" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="FontSize" Value="{DynamicResource ControlContentThemeFontSize}" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="ItemsPanel" Value="{StaticResource HorizontalStepsPanelTemplate}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:Steps}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ItemsPresenter Margin="{TemplateBinding Padding}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!--  纵向样式  -->
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="ItemsPanel" Value="{StaticResource VerticalStepsPanelTemplate}" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
