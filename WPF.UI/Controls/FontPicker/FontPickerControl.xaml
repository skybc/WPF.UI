<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Wpf.Ui.Controls"
    xmlns:local="clr-namespace:Wpf.Ui.Controls">

    <!--  Font Settings Converters  -->
    <local:FontFamilyExtractorConverter x:Key="FontFamilyExtractor" />
    <local:FontSizeExtractorConverter x:Key="FontSizeExtractor" />
    <local:FontStyleExtractorConverter x:Key="FontStyleExtractor" />
    <local:FontWeightExtractorConverter x:Key="FontWeightExtractor" />
    <local:ForegroundExtractorConverter x:Key="ForegroundExtractor" />

    <!--  Font Picker Control Style  -->
    <Style TargetType="{x:Type local:FontPickerControl}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FontPickerControl}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Font Preview TextBlock  -->
                        <Border
                            Grid.Column="0"
                            Padding="12,8"
                            Background="{DynamicResource ControlFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="{DynamicResource ControlCornerRadius}">
                            <TextBlock
                                Name="PreviewTextBlock"
                                VerticalAlignment="Center"
                                FontFamily="{TemplateBinding FontSettings,
                                                             Converter={StaticResource FontFamilyExtractor}}"
                                FontSize="{TemplateBinding FontSettings,
                                                           Converter={StaticResource FontSizeExtractor}}"
                                FontStyle="{TemplateBinding FontSettings,
                                                            Converter={StaticResource FontStyleExtractor}}"
                                FontWeight="{TemplateBinding FontSettings,
                                                             Converter={StaticResource FontWeightExtractor}}"
                                Foreground="{TemplateBinding FontSettings,
                                                            Converter={StaticResource ForegroundExtractor}}"
                                Text="{TemplateBinding PreviewText}" />
                        </Border>

                        <!--  Open Dialog Button  -->
                        <Button
                            x:Name="OpenButton"
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            Padding="0"
                            Focusable="False">
                            <controls:SymbolIcon FontSize="14" Symbol="TextFont24" />
                        </Button>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
