<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Wpf.Ui.Controls">

    <Thickness x:Key="TransferControlPadding">12,12,12,12</Thickness>
    <Thickness x:Key="TransferControlBorderThickness">1</Thickness>
    <Thickness x:Key="TransferControlItemPadding">8,6,8,6</Thickness>
    <Thickness x:Key="TransferButtonMargin">0,12,0,12</Thickness>
    <Style x:Key="DefaultTransferControlStyle" TargetType="{x:Type controls:Transfer}">
        <Setter Property="FocusVisualStyle" Value="{DynamicResource DefaultControlFocusVisualStyle}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Padding" Value="{StaticResource TransferControlPadding}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:Transfer}">
                    <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}" VerticalAlignment="{TemplateBinding VerticalAlignment}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <!--  Left ListBox  -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Top">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="{DynamicResource ControlContentThemeFontSize}"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="Available" />
                            <ListBox
                                x:Name="PART_LeftListBox"
                                Height="{TemplateBinding LeftListBoxHeight}"
                                ItemsSource="{TemplateBinding LeftItemsSource}"
                                SelectionMode="Extended" />
                        </StackPanel>

                        <!--  Transfer Buttons  -->
                        <StackPanel
                            Grid.Column="1"
                            Margin="12,0,12,0"
                            VerticalAlignment="Center">
                            <!--  Move Right Single  -->
                            <controls:Button
                                x:Name="PART_MoveRightButton"
                                Margin="{StaticResource TransferButtonMargin}"
                                ToolTip="Move selected items to the right">
                                <controls:SymbolIcon Symbol="ChevronRight24" />
                            </controls:Button>

                            <!--  Move Left Single  -->
                            <controls:Button
                                x:Name="PART_MoveLeftButton"
                                Margin="{StaticResource TransferButtonMargin}"
                                ToolTip="Move selected items to the left">
                                <controls:SymbolIcon Symbol="ChevronLeft24" />
                            </controls:Button>

                            <!--  Move Right All  -->
                            <controls:Button
                                x:Name="PART_MoveRightAllButton"
                                Margin="{StaticResource TransferButtonMargin}"
                                ToolTip="Move all items to the right">
                                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                                    <controls:SymbolIcon Symbol="ChevronDoubleRight20" />

                                </StackPanel>
                            </controls:Button>

                            <!--  Move Left All  -->
                            <controls:Button
                                x:Name="PART_MoveLeftAllButton"
                                Margin="{StaticResource TransferButtonMargin}"
                                ToolTip="Move all items to the left">
                                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                                    <controls:SymbolIcon Symbol="ChevronDoubleLeft20" />

                                </StackPanel>
                            </controls:Button>
                        </StackPanel>

                        <!--  Right ListBox  -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Top">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontSize="{DynamicResource ControlContentThemeFontSize}"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="Selected" />
                            <ListBox
                                x:Name="PART_RightListBox"
                                Height="{TemplateBinding RightListBoxHeight}"
                                ItemsSource="{TemplateBinding RightItemsSource}"
                                SelectionMode="Extended" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource DefaultTransferControlStyle}" TargetType="{x:Type controls:Transfer}" />

</ResourceDictionary>
