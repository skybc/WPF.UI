<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Ui.Controls">

    <Style TargetType="{x:Type local:FormItem}">
        <Setter Property="TitlePadding" Value="{DynamicResource ControlPadding}" />
        <Setter Property="Title" Value="标题" />
        <Setter Property="Content" Value="内容" />
        <Setter Property="Padding" Value="2" />
        <Setter Property="TitlePlacement" Value="Left" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FormItem}">
                    <Border Padding="{TemplateBinding Padding}">
                        <Grid>
                            <!--  Left Layout (Default)  -->
                            <Grid x:Name="LeftLayout">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{TemplateBinding TitleWidth}" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Padding="{TemplateBinding TitlePadding}"
                                    HorizontalAlignment="{TemplateBinding TitleHorizontalAlignment}"
                                    VerticalAlignment="Center"
                                    FontSize="{TemplateBinding TitleFontSize}"
                                    Foreground="{TemplateBinding TitleForeground}"
                                    Text="{TemplateBinding Title}" />
                                <ContentPresenter
                                    Grid.Column="1"
                                    Margin="{TemplateBinding ContentPadding}"
                                    Content="{TemplateBinding Content}" />
                            </Grid>
                            <!--  Top Layout  -->
                            <Grid x:Name="TopLayout" Visibility="Collapsed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Padding="{TemplateBinding TitlePadding}"
                                    HorizontalAlignment="{TemplateBinding TitleHorizontalAlignment}"
                                    VerticalAlignment="Center"
                                    FontSize="{TemplateBinding TitleFontSize}"
                                    Foreground="{TemplateBinding TitleForeground}"
                                    Text="{TemplateBinding Title}" />
                                <ContentPresenter
                                    Grid.Row="1"
                                    Margin="{TemplateBinding ContentPadding}"
                                    Content="{TemplateBinding Content}" />
                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding TitlePlacement, RelativeSource={RelativeSource Self}}" Value="Top">
                            <Setter TargetName="LeftLayout" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="TopLayout" Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>