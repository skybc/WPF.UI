<Window x:Class="TestGrowlApp.TestSymbolIconForeground"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Test SymbolIcon Foreground" Height="450" Width="800">
    <StackPanel Margin="20" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="SymbolIcon Foreground Color Test" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- Default color -->
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Default: " Width="100" VerticalAlignment="Center"/>
            <ui:SymbolIcon Symbol="Add" Width="24" Height="24"/>
        </StackPanel>
        
        <!-- Red color -->
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Red: " Width="100" VerticalAlignment="Center"/>
            <ui:SymbolIcon Symbol="Add" Foreground="Red" Width="24" Height="24"/>
        </StackPanel>
        
        <!-- Blue color -->
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Blue: " Width="100" VerticalAlignment="Center"/>
            <ui:SymbolIcon Symbol="Add" Foreground="Blue" Width="24" Height="24"/>
        </StackPanel>
        
        <!-- Green color -->
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Green: " Width="100" VerticalAlignment="Center"/>
            <ui:SymbolIcon Symbol="Add" Foreground="Green" Width="24" Height="24"/>
        </StackPanel>
        
        <!-- Custom color with hex -->
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Purple: " Width="100" VerticalAlignment="Center"/>
            <ui:SymbolIcon Symbol="Add" Foreground="#FF6A0DAD" Width="24" Height="24"/>
        </StackPanel>
        
        <!-- Different symbol with color -->
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Heart (Red): " Width="100" VerticalAlignment="Center"/>
            <ui:SymbolIcon Symbol="Heart" Foreground="Red" Width="24" Height="24"/>
        </StackPanel>
        
        <!-- Filled symbol with color -->
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Star Filled (Gold): " Width="100" VerticalAlignment="Center"/>
            <ui:SymbolIcon Symbol="Star" Filled="True" Foreground="Gold" Width="24" Height="24"/>
        </StackPanel>
        
        <!-- Larger size with color -->
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Large (32px): " Width="100" VerticalAlignment="Center"/>
            <ui:SymbolIcon Symbol="Settings" Foreground="DarkSlateBlue" Width="32" Height="32"/>
        </StackPanel>
        
        <!-- Data binding test -->
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Data Bound: " Width="100" VerticalAlignment="Center"/>
            <ui:SymbolIcon Symbol="Warning" Foreground="{Binding ElementName=ColorSlider, Path=Value, Converter={StaticResource BrushConverter}}" Width="24" Height="24"/>
        </StackPanel>
        
        <!-- Color slider for testing data binding -->
        <StackPanel Orientation="Horizontal" Margin="0,20,0,10">
            <TextBlock Text="Color Intensity: " Width="100" VerticalAlignment="Center"/>
            <Slider Name="ColorSlider" Minimum="0" Maximum="255" Value="128" Width="200"/>
        </StackPanel>
    </StackPanel>
</Window>