<Window x:Class="SimpleSymbolIconTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Simple SymbolIcon Foreground Test" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="SymbolIcon Foreground Color Test" FontSize="18" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"/>
            
            <!-- Test different colors -->
            <StackPanel Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center">
                <ui:SymbolIcon Symbol="Add" Width="32" Height="32" Margin="10"/>
                <ui:SymbolIcon Symbol="Add" Foreground="Red" Width="32" Height="32" Margin="10"/>
                <ui:SymbolIcon Symbol="Add" Foreground="Blue" Width="32" Height="32" Margin="10"/>
                <ui:SymbolIcon Symbol="Add" Foreground="Green" Width="32" Height="32" Margin="10"/>
                <ui:SymbolIcon Symbol="Add" Foreground="#FF6A0DAD" Width="32" Height="32" Margin="10"/>
            </StackPanel>
            
            <!-- Test different symbols -->
            <StackPanel Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center">
                <ui:SymbolIcon Symbol="Heart" Foreground="Red" Width="32" Height="32" Margin="10"/>
                <ui:SymbolIcon Symbol="Star" Filled="True" Foreground="Gold" Width="32" Height="32" Margin="10"/>
                <ui:SymbolIcon Symbol="Settings" Foreground="DarkSlateBlue" Width="32" Height="32" Margin="10"/>
                <ui:SymbolIcon Symbol="Warning" Foreground="Orange" Width="32" Height="32" Margin="10"/>
            </StackPanel>
            
            <TextBlock Text="如果图标显示不同的颜色，说明 Foreground 属性修改成功！" 
                       FontSize="14" Margin="0,30,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>